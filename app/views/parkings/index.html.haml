- unless embedded?
  = link_to root_path, class: 'home-link' do
    %h1.app-title= t 'app.title'
  .app-subtitle
    %span.ideal
      %span.disabled
        Se garer
        = link_to 'maintenant', ideal_path
        ou dans
        = link_to '20mn', ideal_path(delay: 20)
        %span.sep -
        = link_to '40mn', ideal_path(delay: 40)
        %span.sep -
        = link_to '1h', ideal_path(delay: 60)

      %span.enabled.hidden= t 'ideal.enabled'

    / %span.sep -
    / %span.info
    /   = link_to t('info'), info_path

- if defined?(@parking)
  = render partial: 'main_parking'

- unless embedded?
  .filters
    %p.pull-right.muted
      = last_refresh
    .clearfix
    %button#location-filter.filter-item
      %span.location-filter-label.disabled= t 'filters.car.disabled'
      %span.location-filter-label.enabled.hidden= t 'filters.car.enabled'
      %span.location-filter-label.ongoing.hidden= t 'filters.car.ongoing'
    %input#address-filter.filter-item{type: :text, placeholder: "Trier par adresse..."}
    %input#name-filter.filter-item{type: :text, placeholder: "Filtrer par nom..."}
.parkings
  = render @parkings
