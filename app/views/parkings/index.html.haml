- cache(parkings_index_cache_key) do
  - if false
    .row
      .col-12
        .app-subtitle
          %span.ideal
            %span.disabled
              = t 'ideal.disabled.park'
              = link_to t('ideal.disabled.now'), ideal_path
              = t 'ideal.disabled.or'
              = link_to t('ideal.disabled.20'), ideal_path(delay: 20)
              %span.sep -
              = link_to t('ideal.disabled.40'), ideal_path(delay: 40)
              %span.sep -
              = link_to t('ideal.disabled.60'), ideal_path(delay: 60)

            %span.enabled-geoloc.hidden= t 'ideal.enabled-geoloc'
            %span.enabled-address.hidden= t 'ideal.enabled-address'

  .row.mt-2
    .col-12.text-right
      %small.text-muted.infos
        = last_refresh(@parkings)
        = link_to t('info'), faq_path, class: "hidden-phone"
    .col-12.text-center.mt-4
      .row
        .col-12.col-sm-8.offset-sm-2
          .input-group.text-center
            .input-group-addon.btn#location-filter
              %i.fa.fa-map-marker
              %i.fa.fa-times.hidden
              %i.fa.fa-spinner.fa-spin.hidden
            %input.form-control#address-filter{type: "text", placeholder: t('filters.address.placeholder')}

  .row.parkings.mt-2
    = render @parkings
