!!! 5
%html
  %head
    %title= t 'app.title'
    %meta{content: 'width=device-width, initial-scale=1.0', name: 'viewport'}
    %meta{name: 'description', content: t('app.title')}
    %meta{name: 'author', content: 'Yann Klis'}
    = javascript_include_tag :application
    = stylesheet_link_tag :application, media: :all
    = csrf_meta_tags
  %body{class: embedded? ? 'embed' : 'nonembedded'}
    .content
      = yield
      .footer
        .pull-left{style: embedded? ?  'width: 100%' : 'width: 80%;'}
          %p.muted
            = t('footer_text').html_safe
            - unless embedded?
              %br
              = t('footer_addenum').html_safe
              %span.embed-instructions
                %br
                %br
                Pour intégrer ces résultats dans votre site, copier/coller le code suivant :
                %br
                %textarea{style: 'width: 100%;', rows: 1}
                  :escaped
                    <iframe src="http://www.parking-strasbourg.eu/embed" width="100%" height="1200px"></iframe>
        - unless embedded?
          .pull-left{style: 'width: 20%; max-width: 160px;'}
            = link_to image_tag('strasbourgtheeuroptimist.jpg', style: 'width: 100%; max-width: 100%;'), 'http://www.strasbourg.eu'
      .clearfix
    = render partial: 'shared/gmaps'
    = render partial: 'shared/analytics'
